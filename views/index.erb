<!doctype html>
<html lang="en">
<head>
  <title>Hearthstone Card Viewer</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="View legendary level druid and warlock hearthstone cards">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
<div class="container">
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Type</th>
      <th>Rarity</th>
      <th>Set</th>
      <th>Class</th>
    </tr>
    </thead>
    <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card[:name] %></td>
        <td><img src="<%= card[:image] %>" alt="<%= "Image of hearthstone card #{card[:name]}" %>" height="275"></td>
        <td><%= card[:type] %></td>
        <td><%= card[:rarity] %></td>
        <td><%= card[:set] %></td>
        <td><%= card[:class] %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</body>